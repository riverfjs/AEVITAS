{
  "agent": {
    "workspace": "~/.myclaw/workspace",
    "model": "claude-sonnet-4-5-20250929",
    "maxTokens": 8192,
    "temperature": 0.7,
    "maxToolIterations": 100,
    "historyLimit": 30,
    "autoRecall": true,
    "toolLog": {
      "enabled": false,
      "interval": 5
    },
    "compaction": {
      "enabled": false,
      "threshold": 0.8
    },
    "contextWindow": {
      "tokens": 0,
      "warnRatio": 0.8,
      "hardMinTokens": 2000
    },
    "memoryFlush": {
      "enabled": true,
      "reserveTokensFloor": 20000,
      "softThresholdTokens": 4000
    }
  },
  "provider": {
    "type": "anthropic",
    "apiKey": "${ANTHROPIC_API_KEY}",
    "baseUrl": ""
  },
  "tools": {
    "braveApiKey": "${BRAVE_API_KEY}",
    "execTimeout": 60,
    "restrictToWorkspace": true
  },
  "channels": {
    "telegram": {
      "enabled": false,
      "token": "${TELEGRAM_BOT_TOKEN}",
      "allowFrom": [],
      "proxy": ""
    },
    "feishu": {
      "enabled": false,
      "appId": "",
      "appSecret": "",
      "verificationToken": "",
      "encryptKey": "",
      "port": 8080,
      "allowFrom": []
    },
    "wecom": {
      "enabled": false,
      "token": "",
      "encodingAESKey": "",
      "receiveId": "",
      "port": 8081,
      "allowFrom": []
    }
  },
  "gateway": {
    "host": "0.0.0.0",
    "port": 18790
  }
}
